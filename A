 int height = 17;
 int width = height - 1;
 for (int i = 0; i < height; i++)
 {
     for (int j = 0; j <= 2 * width; j++)
     {
         if (j == width - i || j == width + i || (i == height / 2 && j > width - i && j < width + i))
         {
             Console.Write("*");
         }
         else
         {
             Console.Write(" ");
         }
     }
     Console.WriteLine();
 }     
 Console.ReadKey();
