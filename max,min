   int a, b, c, max, min; 
   Console.WriteLine("enter a number");
   a = Convert.ToInt32(Console.ReadLine());
   Console.WriteLine("enter b number");
   b = Convert.ToInt32(Console.ReadLine());
   Console.WriteLine("enter c number");
   c = Convert.ToInt32(Console.ReadLine());
   max = a;
   if (b > max) { max = b; }
   if (c > max) { max = c; }
   min = a;
   if (b < min) { min = b; }
   if (c < min) { min = c; }
