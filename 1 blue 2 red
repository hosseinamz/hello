 static void Main()
 {
     Console.Clear();
     Console.WriteLine("Choose Background Color");
     Console.WriteLine("1. Red");
     Console.WriteLine("2. Blue");
     Console.WriteLine("Any other number: Green");

     Console.Write("Please enter a number: ");
     int number = Convert.ToInt32(Console.ReadLine());

     switch (number)
     {
         case 1:
             Console.BackgroundColor = ConsoleColor.Red;
             Console.Clear();
             Console.WriteLine("The background color is now red.");
             break;
         case 2:
             Console.BackgroundColor = ConsoleColor.Blue;
             Console.Clear();
             Console.WriteLine("The background color is now blue.");
             break;
         default:
             Console.BackgroundColor = ConsoleColor.Green;
             Console.Clear();
             Console.WriteLine("The background color is now Green.");
             break;
     }
     Console.ResetColor(); 
 }
